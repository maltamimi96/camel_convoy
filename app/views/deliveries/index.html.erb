<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>By</th>
      <th>Packages</th>
      <th>Pay</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
     <%if delivery.user == current_user%>
      <tr>
        <td><%= delivery.title %></td>
        <td><%= delivery.deliver %></td>
        <td><%= delivery.by %></td>
        <td><%= delivery.packages %></td>
        <td><%= delivery.pay %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        
      </tr>


      <%end%>
    <% end %>
  </tbody>
</table>

<br>




