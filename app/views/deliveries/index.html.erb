<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>By</th>
      <th>Packages</th>
      <th>Pay</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
     <%if delivery.user == current_user%>
      <tr>
        <td><%= delivery.title %></td>
        <td><%= delivery.deliver %></td>
        <td><%= delivery.by %></td>
        <td><%= delivery.packages %></td>
        <td><%= delivery.pay %></td>
        <td><%= link_to 'Show', delivery %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Delivery', new_delivery_path %>
